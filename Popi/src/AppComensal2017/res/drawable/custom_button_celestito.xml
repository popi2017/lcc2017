<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/colorPrimaryLightPressed"
                android:endColor="@color/colorPrimaryLightPressed"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/colorPrimaryLightPressed" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/colorPrimaryLight"
                android:startColor="@color/colorPrimaryLight"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/colorPrimaryLight" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="@color/colorPrimaryLight"
                android:startColor="@color/colorPrimaryLight"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/colorPrimaryLight" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>